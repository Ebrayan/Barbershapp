<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:background="@color/cardview_shadow_start_color"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         tools:context=".Menu"
        android:scrollbars="none"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_local_offer_black_24dp"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Hay 10 personas"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:textAlignment="center"
                    tools:fontFamily="@font/roboto_thin2"

                    />


            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=" Welcome Mr. Anything "
                android:textColor="@android:color/white"
                tools:fontFamily="@font/roboto_thin2"
                tools:text="Welcome" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                    android:id="@+id/btngoToServices"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:layout_width="120dp"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cuts"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=" Nuestros Servicos"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        tools:fontFamily="@font/roboto_thin2"
                        tools:text="Servicios" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btngoToReservation"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:layout_width="120dp"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Reservaciones"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        tools:fontFamily="@font/roboto_thin2"
                        tools:text="Reservaciones" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btngoToStore"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:layout_width="120dp"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_store_black_24dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Tienda"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        tools:fontFamily="@font/roboto_thin2"
                        tools:text="Store" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btngoToLocation"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:layout_width="120dp"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_location_on_black_24dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=" Ubicacion"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        tools:fontFamily="@font/roboto_thin2"
                        tools:text="Ubicacion" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:layout_width="120dp"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_comment_black_24dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_thin2"
                        android:padding="10dp"
                        android:text=" Opinion "
                        android:textAlignment="center"
                        android:textColor="@android:color/white" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:layout_width="120dp"
                    android:background="?selectableItemBackground"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_settings_black_24dp"
                        />
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Opciones"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_thin2"
                        />

                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>